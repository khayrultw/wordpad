    <style name="wordpad.editText" parent="">
        <item name="android:paddingLeft">@dimen/xxs</item>
        <item name="android:paddingRight">@dimen/xxs</item>
        <item name="android:paddingTop">@dimen/s</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/wordpad_edit_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/divider</item>
    </style>

    <style name="wordpad.dropdown.base" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/s</item>
        <item name="android:paddingEnd">@dimen/s</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="wordpad.dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/wordpad.dropdown.base
        </item>
    </style>

    <style name="primaryButtonOverlay">
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <style name="greyButtonOverlay">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="wordpad.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="cornerRadius">@dimen/corner_radius_s</item>
        <item name="android:paddingTop">@dimen/xxs</item>
        <item name="android:paddingBottom">@dimen/xxs</item>
        <item name="minWidth">@dimen/zero</item>
        <item name="minHeight">@dimen/zero</item>
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:minHeight">@dimen/zero</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="wordpad.Button.Primary" parent="wordpad.Button">
        <item name="materialThemeOverlay">@style/primaryButtonOverlay</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="wordpad.Button.White" parent="wordpad.Button">
        <item name="materialThemeOverlay">@style/greyButtonOverlay</item>
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/primary</item>
        <item name="android:textSize">10sp</item>
    </style>

